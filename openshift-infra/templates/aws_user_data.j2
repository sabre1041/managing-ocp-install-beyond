#cloud-config
hostname: "{{ item.name }}"
fqdn: "{{ item.name }}.{{ domain_name }}"
write_files:
- path: /etc/sudoers.d/99-ec2-user-requiretty
  permissions: '0440'
  content: |
    Defaults:ec2-user !requiretty
{% if item.type in ['infra', 'app'] %}
- path: /etc/sysconfig/docker-storage-setup
  owner: root:root
  permissions: '0644'
  content: |
    DEVS=/dev/sdb
    VG=docker_vg
mounts:
- [ sdb ]
{% endif %}
